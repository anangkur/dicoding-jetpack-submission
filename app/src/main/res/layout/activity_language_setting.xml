<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ConstraintDefault"
    tools:context=".feature.main.languageSetting.LanguageSettingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RadioGroup
        android:id="@+id/rg_language"
        style="@style/RadioGroupWrapVertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <RadioButton
            android:id="@+id/rb_in"
            style="@style/RadioButtonDefault"
            android:buttonTint="@color/black"
            android:text="@string/text_bahasa_indonesia"
            android:layout_margin="@dimen/dimens_16dp"/>
        <RadioButton
            android:id="@+id/rb_en"
            style="@style/RadioButtonDefault"
            android:buttonTint="@color/black"
            android:text="@string/text_english"
            android:layout_margin="@dimen/dimens_16dp"/>
    </RadioGroup>
    <RelativeLayout
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48dp"
        app:layout_constraintTop_toBottomOf="@id/rg_language"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rect_rounded_10dp_solid_green"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:foreground="?selectableItemBackground">
        <TextView
            style="@style/TextTitleNormal"
            android:text="@string/btn_simpan"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>